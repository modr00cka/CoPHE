{
    "editor.formatOnSave": true,
    "[python]": {
        "editor.codeActionsOnSave": {
            "source.organizeImports": true
        },
        "editor.defaultFormatter": "ms-python.black-formatter"
    },
 
    "python.formatting.provider": "none",
    "isort.args": [
        "--profile",
        "black"
    ],
    "editor.acceptSuggestionOnEnter": "on"
}